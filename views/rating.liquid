{% block content %}
  <div class="card mb-4 shadow">
    <div class="card-body">
      <p>{{ rating.rating }}</p>
      <div class="d-flex justify-content-between">
        <small>Author: {{rating.author.username}}</small>
        {% if rating.author == userId %}
            <form action="/ratings/delete/{{ pet.id }}/{{ rating.id }}?_method=DELETE" method="POST">
              <input type="submit" class="btn btn-danger" value="X">
            </form>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}