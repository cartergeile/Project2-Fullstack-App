{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
  <form action="/pets/{{pet.id}}?_method=PUT" method="POST">
    <fieldset>
      <legend style="color: white">Edit {{pet.name}}</legend>
      <label class="form-label" style="color: white">Type:</label>
      <input 
          type="text" 
          class="form-control" 
          name="type"
          placeholder="What kind of pet is it?"
          required
          value="{{pet.type}}">
      <label class="form-label" style="color: white">Name:</label>
      <input 
          type="text" 
          class="form-control" 
          name="name"
          placeholder="What is the name of your pet?"
          required
          value="{{pet.name}}">
      <label class="form-label" style="color: white">Color:</label>
      <input 
          type="color" 
          class="form-control" 
          name="color"
          placeholder="What color is your pet?"
          required 
          value="{{fruit.color}}">
      <label class="form-label" style="color: white">Age:</label>
      <input 
          type="number" 
          class="form-control" 
          name="age"
          placeholder="How old is your pet?"
          required
          value="{{pet.age}}">
    </fieldset>
    <input type="submit" class="btn btn-success mt-3" value="Edit {{pet.name}}">
    <a href="/pets/{{pet.id}}" class="btn btn-warning mt-3">Back</a>
  </form>
</div>
{% endblock %}